<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
</head>
<body>
    <form method="post">
    <div class="form-group row">
    <label for="Login" class="login">Login</label>
    <div class="col-sm-10">
     <input name="login" type="text" class="form-control {% if errors.login is defined %}is-invalid{% endif %}" id="exampleInputLog" aria-describedby="logHelp" value="{{ formData.login }}">
        {% if errors.login is defined %}
        <div class="invalid-feedback">
            {{ messages.login }}
        </div>
            {% endif %}
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control {% if errors.password is defined %}is-invalid{% endif %}" value="{{ formData.password }}">
      {% if errors.password is defined %}
        <div class="invalid-feedback">
            {{ messages.password }}
        </div>
            {% endif %}
      <button type="submit">Login</button>
    </div>
  </div>
</form>
</body>
</html>